<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="8" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.controller.LoginController" prefWidth="400" prefHeight="250">
    <Label text="Login or Create User" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
    <HBox spacing="6" alignment="CENTER">
        <Label text="Username:"/>
        <TextField fx:id="txtUsername" prefWidth="200"/>
    </HBox>
    <HBox spacing="6" alignment="CENTER">
        <Label text="Password:"/>
        <PasswordField fx:id="txtPassword" prefWidth="200"/>
    </HBox>
    <Button text="Login" onAction="#onLogin"/>
</VBox>
